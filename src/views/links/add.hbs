<h1 style="padding-top: 20px; padding-bottom: 10px; text-align: center">Registro</h1>
    <!--Planilla de registro-->
    <div class="container col-md-5 formularios" style="margin-bottom: 9%">
      <form action="/links/add" method="POST">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="validationServer01">Nombre</label>
            <input type="text" class="form-control is-valid" id="validationServer01" placeholder="" name="nombre" required>          
          </div>                        
          <div class="form-group col-md-6">
            <label for="validationServer02">Apellido</label>
            <input type="text" class="form-control is-valid" id="validationServer02" placeholder="" name="apellido" required>          
          </div>                
        </div>
        <div class="form-row">
          <label for="validationServer03" style="padding-left: 5px">Documento de identidad</label>
        </div>          
        <div class="form-row">
          <div class="form-group col-md-3">             
            <select id="inputState" class="form-control" name="tipodi">
              <option selected>V</option>
              <option>E</option>
              <option>P</option>
              <option>J</option>
              <option>G</option>
              <option>R</option>
            </select>
          </div>            
          <div class="form-group col-md-9">           
            <input type="text" class="form-control is-invalid" id="validationServer02" placeholder="" name="numdi" required>          
          </div>                
        </div>
        <div class="form-row">
          <div class="form-group col-md-3">
            <label for="validationServer02">Edad</label>             
            <input type="text" class="form-control is-invalid" id="validationServer02" placeholder="" name="edad" required>
          </div>            
          <div class="form-group col-md-9">
            <label for="validationServer02">Teléfono</label>           
            <input type="text" class="form-control is-invalid" id="validationServer02" placeholder="" name="telefono" required>          
          </div>                
        </div>
        <div class="form-row">
            <div class="col">
              <label for="validationServer01">Dirección</label>
              <input type="text" class="form-control is-valid" id="validationServer01" placeholder="" name="direccion" required>          
            </div>                  
          </div>
        <div class="form-row" style="padding-top: 12px">
          <div class="col">
            <label for="validationServer04">Correo electrónico</label>
            <input type="text" class="form-control is-invalid" id="validationServer02" placeholder="" name="email" required>          
            <div class="invalid-feedback">
              Correo eletrónico inválido.
            </div>
          </div>                  
        </div>
        <div class="form-row" style="padding-top: 12px">          
          <div class="col">
            <label for="validationServer05">Contraseña</label>
            <input type="text" class="form-control is-invalid" id="validationServer02" placeholder="" name="contrasenia" required>          
            <div class="invalid-feedback">
              Algunos caracteres son inválidos.
            </div>
          </div>        
        </div>
        <div class="form-group" style="padding-top: 20px">
          <div class="form-check">
            <input class="form-check-input is-invalid" type="checkbox" value="" id="invalidCheck3" required>
            <label class="form-check-label" for="invalidCheck3">
              Acepto los términos y condiciones
            </label>
            <div class="invalid-feedback">
              Debe aceptar nuestros términos y condiciones para poder registrarse.
            </div>
          </div>
        </div>
        <div class="container" style="padding-top: 10px; padding-bottom: 10px">
          <div class="row justify-content-center">            
            <button class="btn btn-outline-success" type="submit">Registrarme</button>                        
          </div>          
        </div>        
      </form>
    </div>